<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3><br>
          <h3 class="panel-title">您搜索的是<%= @search_type %>为“<%= @course_search %>”的结果记录,共<%= @course.size %>条</h3>
        </div>

        <div class="panel-body" style="min-height: 450px">

          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>

            </tr>
            </thead>
            <tbody>

              <% @course.each do |course| %>
                  <tr>
                    <td><%= course.course_code %></td>
                    <td><%= course.name %></td>
                    <td><%= course.credit %></td>
                    <td><%= course.limit_num %></td>
                    <td><%= course.student_num %></td>
                    <td><%= course.course_type %></td>
                    <td><%= course.teaching_type %></td>
                    <td><%= course.exam_type %></td>
                    <td><%= course.teacher.name %></td>
                    <td><%= link_to  "查看详细信息",courseinfo_course_path(course), :class=>"glyphicon" %></td>
                    <% if course.student_num != course.limit_num %>
                        <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>
                    <% else %>
                        <td>课程已满</td>
                    <% end %>

                  </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
